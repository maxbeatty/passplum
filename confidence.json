{
    "connections": [
        {
            "port": "$env.PORT"
        }
    ],
    "plugins": {
        "$filter": "env",
        "$base": {
            "vision": {},
            "visionary": {
                "engines": { "hbs": "handlebars" },
                "path": "./lib/templates",
                "layout": true
            },
            "./lib/ratelimit": {
                "redis": {
                    "port": "$env.REDIS_PORT",
                    "host": "$env.REDIS_HOST"
                },
                "namespace": "passplum",
                "max": 500,
                "duration": 3600000
            },
            "./lib/routes": {},
            "good": {
                "opsInterval": 5000,
                "reporters": [{
                    "reporter": "good-console",
                    "events": { "log": "*", "response": "*", "request": "*", "error": "*" }
                }]
            }
        },
        "dev": {
            "blipp": {},
            "inert": {},
            "./lib/icons": {},
            "visionary": {
                "isCached": false,
                "context": {
                    "measure": false
                }
            }
        },
        "prod": {
            "visionary": {
                "context": {
                    "measure": true
                }
            }
        }
    }
}
