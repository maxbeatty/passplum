{
  "apps": [
    {
      "name": "pp-now-server",
      "script": "now-server",
      "args": "--rules pm2-now-server.json --log",
      "watch": [
        "pm2-now-server.json"
      ]
    },
    {
      "name": "pp-assets",
      "cwd": "./packages/assets",
      "script": "npm",
      "args": "start",
      "env": {
        "PORT": 3002
      }
    },
    {
      "name": "pp-web",
      "cwd": "./packages/web",
      "script": "npm",
      "args": "run dev",
      "env": {
        "PORT": 3001
      }
    }
  ],
  "rules": [
    {
      "pathname": "/assets/**",
      "method": [
        "GET"
      ],
      "dest": "http://localhost:3002"
    },
    {
      "pathname": "/",
      "method": [
        "GET"
      ],
      "dest": "http://localhost:3001"
    }
  ]
}
